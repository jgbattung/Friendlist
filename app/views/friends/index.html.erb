<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Occupation</th>
      <th></th>

    </tr>
    
  </thead>
  
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.occupation %></td>
        <td><%= link_to "Open profile", friend, class:'text-info' %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<%= link_to "New friend", new_friend_path, class:'btn btn-dark' %>
